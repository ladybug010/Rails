<h1>Listing entries</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Payee</th>
    <th>Category</th>
    <th>Payee</th>
    <th>Account</th>
    <th>Memo</th>
    <th>Cleared</th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%=h entry.number %></td>
    <td><%=h entry.payee_id %></td>
    <td><%=h entry.category_id %></td>
    <td><%=h entry.payee_id %></td>
    <td><%=h entry.account_id %></td>
    <td><%=h entry.memo %></td>
    <td><%=h entry.cleared %></td>
    <td><%= link_to 'Show', entry %></td>
    <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
    <td><%= link_to 'Destroy', entry, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

