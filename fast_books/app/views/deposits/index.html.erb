<h1>Listing deposits</h1>

<table>
  <tr>
  </tr>
<th>Number</th>
<th>Amount</th>
<th>Account Name </th>
<th>Account Number</th>

<% @deposits.each do |deposit| %>
  <tr>
	
	<td><%=h deposit.number %> </td>
	<td><%=h deposit.amount %> </td>
	<td><%=h deposit.account.name%> </td>
	<td><%=h deposit.account.number%> <td>
		
    <td><%= link_to 'Show', deposit %></td>
    <td><%= link_to 'Edit', edit_deposit_path(deposit) %></td>
    <td><%= link_to 'Destroy', deposit, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New deposit', new_deposit_path %>